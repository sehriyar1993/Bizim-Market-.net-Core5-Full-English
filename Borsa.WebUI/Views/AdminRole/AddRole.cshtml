@model RoleViewModel

@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <div class="form-group">
        <label>Role Update</label>
    </div>
    <div class="form-group">
        <label>Role Name</label>
